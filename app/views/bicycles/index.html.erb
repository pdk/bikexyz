<%- model_class = Bicycle -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:lookup_code) %></th>
      <th><%= model_class.human_attribute_name(:owner_name) %></th>
      <th><%= model_class.human_attribute_name(:owner_alternate_name) %></th>
      <th><%= model_class.human_attribute_name(:make) %></th>
      <th><%= model_class.human_attribute_name(:model) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <!-- <th><%= model_class.human_attribute_name(:color) %></th> -->
      <!-- <th><%= model_class.human_attribute_name(:size) %></th> -->
      <!-- <th><%= model_class.human_attribute_name(:serial) %></th> -->
      <!-- <th><%= model_class.human_attribute_name(:city) %></th> -->
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <!-- <th><%= model_class.human_attribute_name(:created_at) %></th> -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bicycles.each do |bicycle| %>
      <tr>
        <td><%= link_to bicycle.lookup_code, bicycle_path(bicycle) %></td>
        <td><%= bicycle.owner_name %></td>
        <td><%= bicycle.owner_alternate_name %></td>
        <td><%= bicycle.make %></td>
        <td><%= bicycle.model %></td>
        <td><%= bicycle.type %></td>
        <!-- <td><%= bicycle.color %></td> -->
        <!-- <td><%= bicycle.size %></td> -->
        <!-- <td><%= bicycle.serial %></td> -->
        <!-- <td><%= bicycle.city %></td> -->
        <td><%= bicycle.state %></td>
        <td><%= bicycle.country %></td>
        <!-- <td><%= bicycle.created_at %></td> -->
        <td>
          <% if can? :update, bicycle %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_bicycle_path(bicycle), :class => 'btn btn-mini' %>
          <% end %>
          <% if can? :destroy, bicycle %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        bicycle_path(bicycle),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bicycle_path,
            :class => 'btn btn-primary' %>

<%= simple_form_for @bicycle, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <div class="control-group">
    
      <%= f.input :owner_name %>
      <%= f.input :owner_alternate_name, :label => "Alternate name (optional)" %>
      <%= f.input :make %>
      <%= f.input :model %>
      <%= f.input :type %>
      <%= f.input :color %>
      <%= f.input :size %>
      <%= f.input :gears %>
      <%= f.input :serial %>
      <%= f.input :city %>
      <%= f.input :state %>
      <%= f.input :country, :as => :string %>

      <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    bicycles_path, :class => 'btn' %>
      </div>
    </div>
  </fieldset>
<% end %>
